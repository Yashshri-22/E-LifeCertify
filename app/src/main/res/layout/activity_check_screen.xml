<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_bg"
    tools:context=".CheckScreen">

    <ProgressBar
        android:id="@+id/check_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ppo_check_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_bold"
            android:text="@string/ppo_number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/check_one"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/check_two"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/check_three"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/check_four"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/Registration_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="@string/registration_form_step1"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:id="@+id/check_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/full_name"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableStart="@drawable/adminid_icon"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/full_name"
                            android:inputType="date"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/mobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/mobile"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/login_id"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/aadharNo"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/aadhar_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/aadharNo"
                            android:inputType="number"
                            android:maxLength="12"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/gender_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/gender"
                            android:inputType="text"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/designation"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/designation"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/designation"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableStart="@drawable/dob_icon"
                            android:drawableEnd="@drawable/calendar"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/date_of_birth"
                            android:inputType="none"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/date_of_joining"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableStart="@drawable/joining_date_icon"
                            android:drawableEnd="@drawable/calendar"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/date_of_joining"
                            android:inputType="none"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/date_of_retirement"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:drawableStart="@drawable/retirement_date_icon"
                            android:drawableEnd="@drawable/calendar"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/date_of_retirement"
                            android:inputType="none"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/type_of_retirement"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/retirement_type_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/type_of_retirement"
                            android:inputType="number"
                            android:maxLength="1"
                            android:onClick="showDatePicker"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/nominee_type"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/nominee_type_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/nominee_type"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/nominee_name"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/nominee_name_icon"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/nominee_name"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/height"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/height"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/height"
                            android:inputType="numberDecimal"
                            android:maxLength="5"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/birth_mark"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/birth_mark"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/birth_mark"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/bank_name"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/bank"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/bank_name"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/bank_accNo"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/bank_account_number"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/bank_accNo"
                            android:inputType="number"
                            android:maxLength="16"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginVertical="8dp"
                            android:background="@drawable/custom_edittext"
                            android:drawableStart="@drawable/address"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pontano_sans"
                            android:hint="@string/address"
                            android:inputType="text"
                            android:maxLength="50"
                            android:padding="12dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHighlight="@color/cardview_dark_background"
                            android:textColorHint="@color/hint_color"
                            android:textSize="16sp" />


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/continue_step1"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button_black"
            android:fontFamily="@font/pt_sans_bold"
            android:text="@string/continueButton"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>