<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_bg"
    tools:context=".CheckScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ppo_check_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_bold"
            android:text="@string/ppo_number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/finger_one"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/finger_two"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/finger_three"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="6dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/finger_four"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:fontFamily="@font/pontano_sans"
                android:hint="@string/x"
                android:inputType="number"
                android:maxLength="1"
                android:padding="12dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="18sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Registration_fingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="@string/registration_form_step3"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/fingerprint"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/fingerscan_icon" />

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/button_black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/quality_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/button_black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/btnDeviceInfo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:backgroundTint="@color/button_blue"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="@string/DeviceInfo"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="20dp" />

                <Button
                    android:id="@+id/btnCapture"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/button_blue"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="@string/capture"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="20dp" />

                <TextView
                    style="@style/lblTitleLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="PidOptions :"
                    android:visibility="gone"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/txtPidOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_bg"
                    android:inputType="none"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorLabel"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/txtDataLabel"
                    style="@style/lblTitleLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Data :"
                    android:visibility="gone"
                    tools:ignore="TextSizeCheck" />

                <EditText
                    android:id="@+id/txtOutput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_bg"
                    android:inputType="none"
                    android:padding="@dimen/_5sdp"
                    android:text=""
                    android:textColor="@color/colorLabel"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/continue_step3"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button_black"
            android:fontFamily="@font/pt_sans_bold"
            android:text="@string/continueButton"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>